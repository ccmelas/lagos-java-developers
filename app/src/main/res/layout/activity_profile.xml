<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryApp"
    tools:context="com.melas.javadevelopers_lagos.ProfileActivity">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/developer_avatar"
        tools:src="@drawable/ic_code"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Username"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/github_url"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Username"/>
        <Button
            android:id="@+id/share_profile"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="10dp"
            android:textColor="@android:color/white"
            android:text="@string/share_profile"
            android:layout_gravity="center"
            android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>
